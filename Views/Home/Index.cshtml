    ViewData["Title"] = "Home";
    Layout = "_MainLayout";
}
<html>
    <body>
        <div class="container text-center">
            <div class="row py-3 my-3 mx-3 align-items-center rounded-3" id="BlackBG">
                <div class="col-6">
                    <img src="~/MainImages/CateringOnly.jpeg" class="img-fluid rounded-3" id="MenuImg">
                </div>
                <div class="col-6">
                    <h1 class="text-light fw-bold lh-lg">Catering Only</h1>
                    <p class="text-light lh-lg text-wrap">We will bring the food to you!<br>Ordered food will be delivered and served on any time of any event anywhere.</p>
                    <p class="text-light lh-lg text-wrap">Php 4000 delivery + service crew consisting of 10 servers and 5 waiters</p>
                    <a href="../Home/BookNow" class="text-light btn btn-success">Book Now</a>
                </div>
            </div>
            <div class="row py-3 mb-3 mx-3 align-items-center rounded-3" id="BlackBG">
                <div class="col-6">
                    <h1 class="text-light fw-bold lh-lg">Catering &amp; Venue</h1>
                    <p class="text-light lh-lg text-wrap">We will provide the venue of any event on our own venue grounds and food will be served on time! Our presentable and comfortable venue will be used for any event our client, providing design of the venue based on the event the client books.</p>
                    <p class="text-light lh-lg text-wrap">Php 7000 for service and unlimited cold water available.</p>
                    <a href="../Home/BookNow" class="text-light"><button class="btn btn-success">Book Now</button></a>
                </div>
                <div class="col-6">
                    <img src="~/MainImages/VenueOnly.jpg" class="img-fluid rounded-3">
                </div>
            </div>

            <div class="row mb-3 mt-3 mx-3 align-items-center">
                    <div class="col-4" id="spacer"></div>
                    <div class="col-4"><h1 class="mb-3 pb-2 border-2 border-bottom border-dark">Menu</h1></div>
                    <div class="col-4" id="spacer"></div>
            </div>

            <div class="row mb-3 mx-3 align-items-center">

                <div class="col mx-1 d-flex align-items-end" id="Main_Dish">
                    <h5 class="text-light">Main Dish</h5>
                </div>

                <div class="col mx-1 d-flex align-items-end" id="Appetizer">
                    <h5 class="text-light">Appetizer</h5>
                </div>

                <div class="col mx-1 d-flex align-items-end" id="Dessert">
                    <h5 class="text-light">Dessert</h5>
                </div>

                <div class="col mx-1 d-flex align-items-end" id="Drinks">
                    <h5 class="text-light">Drinks</h5>
                </div>
            </div>

            <div class="row mb-3 mx-3 align-items-center">
                <div class="col" id="spacer"></div>
                    <div class="col" id="spacer"></div>
                    <div class="col" id="spacer"></div>
                    <div class="col"><a href="../Home/Menu" class="btn btn-lg text-light w-100" id="Menu">
