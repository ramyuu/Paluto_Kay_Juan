@model Paluto_Kay_Juan.Models.AdminModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Viewing Dish Details</h1>

<hr />
<div class="container">
    <form asp-action="Details">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col">
                     <div class="row">

                        <div class="col-12 mb-1">
                            <div class="form-group">
                                <label asp-for="DishName" class="control-label fw-bold">Dish Name</label>
                                <p class="form-control-readonly mt-1">@Html.DisplayFor(model => model.DishName)</p>
                            </div>
                        </div>

                        <div class="col-12 mb-1">
                            <div class="form-group">
                                <label asp-for="DishCategory" class="control-label fw-bold">Dish Category</label>
                                <p class="form-control-readonly mt-1">@Html.DisplayFor(model => model.DishCategory)</p>
                            </div>
                        </div>

                        <div class="col-12 mb-1">
                            <div class="form-group">
                                <label asp-for="AmtPerOrder" class="control-label fw-bold">Amount Per Order</label>
                                <p class="form-control-readonly mt-1">@Html.DisplayFor(model => model.AmtPerOrder)</p>
                            </div>
                        </div>

                        <div class="col-12 mb-1">
                            <div class="form-group">
                                <label asp-for="Price" class="control-label fw-bold">Price Per Order</label>
                                <p class="form-control-readonly mt-1">@Html.DisplayFor(model => model.Price)</p>
                            </div>
                        </div>
                     </div>
                </div>

                <div class="col text-center">
                    <div class="row">
                        <div class="col" name="spacer"></div>
                        <div class="col-6 mb-3">
                            <div class="form-group">
                                <div class="row">
                                    <img id="PreviewPhoto" src="~/images/@Model.FoodImgUrl"
                                    onerror="this.onerror=null;this.src='https://www.metmuseum.org/content/img/placeholders/NoImageAvailableIcon.png';"
                                    width="300px" height="300px" style="border:1px solid black;" />
                                </div>
                            </div>
                        </div>
                        <div class="col" name="spacer"></div>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col">
                    <div class="form-group my-3">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>

            </div>
    </form>
</div>