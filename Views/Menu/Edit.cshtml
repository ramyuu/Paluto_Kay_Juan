@model Paluto_Kay_Juan.Models.AdminModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Dish Details in Menu</h1>

<hr />
<div class="container">
    <form asp-action="Edit" enctype="multipart/form-data" id="MenuForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FoodImgUrl" />
            <div class="row">
                <div class="col">
                     <div class="row">

                        <div class="col-12 mb-1">
                            <div class="form-group">
                                <label asp-for="DishName" class="control-label">Dish Name</label>
                                <input asp-for="DishName" class="form-control"/>
                                <span asp-validation-for="DishName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 mb-1">
                            <div class="form-group">
                                <label asp-for="DishCategory" class="control-label">Dish Category</label>
                                <select asp-for="DishCategory" class="form-select" asp-items="ViewBag.Category"></select>
                                <span asp-validation-for="DishCategory" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 mb-1">
                            <div class="form-group">
                                <label asp-for="AmtPerOrder" class="control-label">Amount Per Order</label>
                                <input asp-for="AmtPerOrder" class="form-control"/>
                                <span asp-validation-for="AmtPerOrder" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 mb-1">
                            <div class="form-group">
                                <label asp-for="Price" class="control-label">Price Per Order</label>
                                <input asp-for="Price" class="form-control"/>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                     </div>
                </div>

                <div class="col text-center">
                    <div class="row">
                        <div class="col" name="spacer"></div>
                        <div class="col-6 mb-3">
                            <div class="form-group">
                                <div class="row">
                                    <img id="PreviewPhoto" src="~/images/@Model.FoodImgUrl"
                                    onerror="this.onerror=null;this.src='https://www.metmuseum.org/content/img/placeholders/NoImageAvailableIcon.png';"
                                    width="300px" height="300px" style="border:1px solid black;" />
                                    <span asp-validation-for="UploadedImage" class="text-danger mt-1"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col" name="spacer"></div>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col">
                    <div class="form-group my-3">
                        <input type="submit" value="Save Changes" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>

                <div class="col">
                    <div class="row">
                        <div class="col" name="spacer"></div>
                        <div class="col-6 mb-3">
                            <div class="form-group">
                                <div class="row mt-3 text-center">
                                    <div class="custom-file">
                                        <input asp-for="UploadedImage" class="form-control" id="UploadedImage"
                                            onchange="document.getElementById('PreviewPhoto').src = window.URL.createObjectURL(this.files[0])" required/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col" name="spacer"></div>
                    </div>
                </div>
            </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        function rebindvalidators(){
            var $form = $("#MenuForm");
            $form.unbind();
            $form.data("validator",null);
            $.validator.unobtrusive.parse($form);
            $form.validate($form.data("unobtrusiveValidation").options);
        }

    </script>
}
