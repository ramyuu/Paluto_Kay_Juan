@model Paluto_Kay_Juan.Models.AdminModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h4>AdminModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DishName" class="control-label"></label>
                <span asp-validation-for="DishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DishCategory" class="control-label"></label>
                <span asp-validation-for="DishCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmtPerOrder" class="control-label"></label>
                <span asp-validation-for="AmtPerOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <img src="~/images/@Model.FoodImgUrl" alt="Logo Image"
                width="300px" height="300px" style="border:1px solid black;" />
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
